[Unit]
Description=Automatisches Mounten und √úberpr√ºfen des iPad-Laufwerks
After=network.target

[Service]
Type=oneshot
ExecStart=/usr/bin/bash -c '
  USB_LABEL="Linux"
  MOUNT_POINT="/media/${USB_LABEL}"

  if ! mountpoint -q "$MOUNT_POINT"; then
    echo "üîå Mounting ${USB_LABEL}..."
    sudo mkdir -p "$MOUNT_POINT"
    sudo mount -L "$USB_LABEL" "$MOUNT_POINT" || exit 1
  fi

  if mountpoint -q "$MOUNT_POINT"; then
    echo "‚úÖ ${USB_LABEL} ist gemountet."
  else
    echo "‚ùå Konnte ${USB_LABEL} nicht mounten."
  fi
'